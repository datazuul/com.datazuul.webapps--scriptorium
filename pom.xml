    <dependency>
      <groupId>de.codecentric</groupId>
      <artifactId>spring-boot-starter-admin-client</artifactId>
      <version>1.0.2</version>
    </dependency>
    <dependency>
      <groupId>org.imgscalr</groupId>
      <artifactId>imgscalr-lib</artifactId>
      <version>4.2</version>
      <type>jar</type>
