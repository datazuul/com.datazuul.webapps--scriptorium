      <groupId>org.apache.httpcomponents</groupId>
      <artifactId>fluent-hc</artifactId>
      <version>4.3.4</version>
      <type>jar</type>
    </dependency>
  </dependencies>

  <properties>
    <start-class>com.datazuul.webapps.scriptorium.Application</start-class>
  </properties>

